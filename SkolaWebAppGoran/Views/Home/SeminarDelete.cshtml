@model SkolaWebAppGoran.Models.Seminar

<h3>Jeste li sigurni da želite izbrisati ovaj seminar?</h3>
    <hr />
<div class="form-horizontal">
    <dl class="dl-horizontal">
        <dt>
            Naziv:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Naziv)
        </dd>
        <dt>
            Opis:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Opis)
        </dd>
        <dt>
            Datum:
        </dt>
        <dd>
            @Model.Datum.ToShortDateString()
        </dd>
    </dl>
</div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @Html.ActionLink("Nazad na listu", "SeminariEdit", null, new { @class = "btn btn-primary" }) |
            <input type="submit" value="Briši" class="btn btn-danger" /> 
        </div>
    }

